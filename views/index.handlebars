<div class="container">
  <!-- <div class="jumbotron text-center">
    <h1>Eat Da Burger!</h1>
  </div> -->

  <div class="col-lg-12 text-center">
    <img src="/assets/images/burger.png">
    <h1>Eat Da Burger!</h1>
  </div>

  <div class="col-lg-6 text-center">
    <h2>Burgers not eaten</h2>

    <ul style="list-style-type:none">
      {{#each burger}}
        {{#unless this.devoured}}
          <li>
            {{this.id}}. {{this.burger_name}}

            <form action="burger/updateOne/{{this.id}}?_method=PUT" method="POST">
              <input type="hidden" name="devoured" value="true">
              <button type="submit" class="btn btn-default">EAT!</button>
            </form>
          </li>
        {{/unless}}
      {{/each}}
    </ul> 
  </div>
  <div class="col-lg-6 text-center">
    <h2>Burgers eaten</h2>

    <ul style="list-style-type:none">
      {{#each burger}}
        {{#if this.devoured}}
          <li>
            {{this.id}}. {{this.burger_name}}
          </li>
        {{/if}}
      {{/each}}
    </ul>
  </div>
  <div class="col-lg-12 text-center">
    <h2>Add a Burger</h2>
    <form class="create-update-form" action="burgers/create" method="POST">

      <div class="form-group">
        <label for="burger">Burger:</label>
        <input type="text" id="burger" name="name">
      </div>

      <button type="submit" class="btn btn-default">Add Burger</button>
    </form>
  </div>
</div>